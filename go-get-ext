#!/bin/bash -e

. vars.inc

read -p "(Re) Installing external dependencies [y/N]?" YES
if [ "$YES" != 'Y' ] && [ "$YES" != 'y' ];
then
    	echo "No? Then bye!"
        exit 1
fi

# External packages which this project depends on.
packages=(\
	"github.com/golang/glog"
	)

echo "Installing external dependencies"
rm -rf $GOPATH/*
for i in ${packages[*]}
do
	echo $i
	go get -d $i
	go install $i
done

cd ext
for i in ".hg*" ".git*" ".bzr*"
do
	find . -name $i -print0 | xargs -0 rm -rf
done
echo "OK"
